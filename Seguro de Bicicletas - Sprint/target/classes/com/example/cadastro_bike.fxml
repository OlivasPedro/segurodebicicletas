<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="468.0" prefWidth="542.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.CadastroBikeController">
    <children>
        <Label layoutX="22.0" layoutY="27.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Cadastro de Bicicleta" />

        <VBox layoutX="22.0" layoutY="76.0" spacing="10">
            <Label style="-fx-font-weight: bold;" text="Marca" />
            <TextField fx:id="txtMarca" prefHeight="25.0" prefWidth="200.0" promptText="Digite a marca da bicicleta" />

            <Label style="-fx-font-weight: bold;" text="Ano de Fabricação" />
            <TextField fx:id="txtAno" prefHeight="25.0" prefWidth="200.0" promptText="Digite o ano de fabricação" />

            <Label style="-fx-font-weight: bold;" text="Tamanho" />
            <TextField fx:id="txtTamanho" prefHeight="25.0" prefWidth="200.0" promptText="Pequeno, Médio ou Grande" />

            <Label style="-fx-font-weight: bold;" text="Número de Série" />
            <TextField fx:id="txtNumeroSerie" prefHeight="25.0" prefWidth="200.0" promptText="Digite o número de série" />

            <Label style="-fx-font-weight: bold;" text="Modelo" />
            <TextField fx:id="txtModelo" prefHeight="25.0" prefWidth="200.0" promptText="Digite o modelo da bicicleta" />
        </VBox>

        <VBox layoutX="303.0" layoutY="76.0" spacing="10">
            <Label style="-fx-font-weight: bold;" text="Valor da Bicicleta" />
            <TextField fx:id="txtValor" prefHeight="25.0" prefWidth="200.0" promptText="Informe o valor da bicicleta" text="0" />

            <Label style="-fx-font-weight: bold;" text="Equipamentos Modificados" />
            <TextField fx:id="txtModificacao" prefHeight="25.0" prefWidth="200.0" promptText="Descreva as modificações" />

            <Label style="-fx-font-weight: bold;" text="Valor das Modificações" />
            <TextField fx:id="txtValorModificacao" prefHeight="25.0" prefWidth="200.0" promptText="Informe o valor das modificações" text="0" />

            <Label style="-fx-font-weight: bold;" text="Sinistro" />
            <TextField fx:id="txtSinistro" prefHeight="25.0" prefWidth="200.0" promptText="Descreva os danos" />

            <Label style="-fx-font-weight: bold;" text="Data do Sinistro" />
            <DatePicker fx:id="dtSinistro" prefHeight="25.0" prefWidth="200.0" />
        </VBox>

        <Button fx:id="btnCadastrarBike" layoutX="257.0" layoutY="405.0" mnemonicParsing="false" onAction="#cadastrarBicicletaButtonClicked" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-font-size: 14px; -fx-border-radius: 5px;" text="Cadastrar" />
      <Button fx:id="btnVoltar" layoutX="162.0" layoutY="405.0" mnemonicParsing="false" onAction="#abrirTelaInicial" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-font-size: 14px; -fx-border-radius: 5px;" text="Voltar" />
    </children>
</AnchorPane>
