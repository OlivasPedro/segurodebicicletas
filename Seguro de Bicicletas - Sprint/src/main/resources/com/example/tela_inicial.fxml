<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="215.0" prefWidth="439.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.TelaInicialController">
    <children>
        <VBox alignment="CENTER" spacing="20">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Bem-vindo ao Sistema de Bicicletas" />

            <Button fx:id="btnCadastrarBike" onAction="#cadastrarBikeButtonClicked" style="-fx-font-size: 18px; -fx-padding: 10px 20px; -fx-background-color: #0078d4; -fx-text-fill: white; -fx-border-radius: 5px;" text="Cadastrar Bicicleta" />
            <Button fx:id="btnVerBikes" onAction="#verButtonClicked" style="-fx-font-size: 18px; -fx-padding: 10px 20px; -fx-background-color: #0078d4; -fx-text-fill: white; -fx-border-radius: 5px;" text="Visualizar Bicicletas Cadastradas" />
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
        </VBox>
    </children>
</AnchorPane>
